@model IEnumerable<Modulo>

@{
	ViewData["Title"] = "Modulos";
}

<h1>Modulos</h1>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modulo in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-IdModulo="@modulo.IdModulo">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-IdModulo="@modulo.IdModulo">Borrar</a>
                </td>
                <td>
                    @modulo.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>
