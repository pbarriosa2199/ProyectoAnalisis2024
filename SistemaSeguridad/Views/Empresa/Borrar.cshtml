@model Empresa

@{
	ViewData["Title"] = "Borrar Empresa";
}
<h2>Eliminar</h2>
<h4>Esta seguro de borrar este registro</h4>
<hr />
<div class="row">
    <label class="col-sm-2 col-form-label col-form-label-lg">Nombre :</label>
    <div class="col-sm-10">
        <label class="col-sm-2 col-form-label col-form-label-lg">@Model.Nombre</label>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-form-label col-form-label-lg">Direccion :</label>
    <div class="col-sm-10">
        <label class="col-sm-2 col-form-label col-form-label-lg">@Model.Direccion</label>
    </div>
</div>
<div class="row">
    <label class="col-sm-2 col-form-label col-form-label-lg">Nit :</label>
    <div class="col-sm-10">
        <label class="col-sm-2 col-form-label col-form-label-lg">@Model.Nit</label>
    </div>
</div>
<form asp-action="BorrarEmpresa">
    <input type="hidden" asp-for="IdEmpresa" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>