@model IEnumerable<Opcion>

@{
    ViewData["Title"] = "Opcion";
}

<h1>Opciones</h1>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var opcion in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-IdOpcion="@opcion.IdOpcion">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-IdOpcion="@opcion.IdOpcion">Borrar</a>
                </td>
                <td>
                    @opcion.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>
